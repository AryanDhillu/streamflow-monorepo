{
  "name": "cms-challenge-root",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev -w apps/api\" \"npm run dev -w apps/worker\" \"npm run dev -w apps/web\"",
    "db:generate": "npm run generate -w packages/database",
    "db:push": "npm run push -w packages/database",
    "db:seed": "npm run seed -w packages/database",
    "build:api": "turbo run build --filter=api",
    "start:api": "node apps/api/dist/index.js"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^8.2.0",
    "turbo": "^2.7.4",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "cors": "^2.8.5"
  }
}
